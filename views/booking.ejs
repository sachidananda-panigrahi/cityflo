<!--Start inner-header-->
<div class="inner-header">

    <div class="header-content">
        <div class="header-content-inner">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <h1>Booking Info</h1>
                        <hr class="primary">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End inner-header-->

<section class="mainbody">

    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-sm-12">

                <h1 class="form-heading">Booking Details</h1>

                <div class="booking-warp">
                    <form class="booking">
                        <label>Routes</label>
                        <div class="row">
                            <div class="col-lg-6 col-sm-12">
                                <input type="text" class="form-control" value="Mira Road, Mumbai" name="name">
                            </div>
                            <div class="to"> <span>TO</span> </div>
                            <div class="col-lg-6 col-sm-12">
                                <input type="email" class="form-control" value="BKC, Mumbai" name="email">
                            </div>
                        </div>  <!--End row-->

                        <br>

                        <div class="row">
                            <div class="col-lg-6 col-sm-12">
                                <div class="form-group">
                                    <label>Pick up Point</label>
                                    <select class="form-control">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                </div>
                            </div><!-- col-sm-6 -->
                            <div class="col-lg-6 col-sm-12">
                                <div class="form-group">
                                    <label>Drop Point</label>
                                    <select class="form-control">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                </div>
                            </div><!-- col-sm-6 -->
                        </div><!--End row-->

                        <div class="row">
                            <div class="col-lg-12 col-sm-12">
                                <div class="form-group">
                                    <label>Bus No</label>
                                    <input type="text" class="form-control" value="MH 020 244" name="email">
                                </div>
                            </div><!-- col-sm-12 -->

                        </div><!--End row-->


                    </form>
                </div>
            </div>
            <!--// End booking details-->
            <div class="col-lg-6 col-sm-12">

                <h1 class="form-heading">Payment Details</h1>

                <div class="booking-warp">
                    <form class="booking">

                        <div class="row">

                            <div class="col-lg-6 col-sm-12">
                                <label>Start Date</label>
                                <div class="input-group">

                                    <input type="text" class="form-control" placeholder="mm/dd/yyyy" id="datepicker">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                </div>
                            </div>

                            <div class="col-lg-6 col-sm-12">
                                <div class="input-group">
                                    <label>Extend Month</label>
                                    <input type="text" id="spinner" />

                                </div>
                            </div>
                        </div>  <!--End row-->
                        <br>
                        <div class="row">
                            <div class="col-lg-6 col-sm-12">
                                <div class="form-group">
                                    <label>End Date</label>
                                    <input type="text" class="form-control" value="09/11/2015" name="endDate">
                                </div>
                            </div><!-- col-sm-6 -->
                            <div class="col-lg-6 col-sm-12">
                                <div class="form-group">
                                    <label>Total Cash</label>
                                    <input type="text" class="form-control" value="Rs.3000" name="totalrs">
                                </div>
                            </div><!-- col-sm-6 -->
                        </div><!--End row-->

                        <div class="row">
                            <div class="col-lg-12 col-sm-12">
                                <div class="form-group text-center">
                                    <a class="btn btn-primary btn-xl page-scroll" href="#">Checkout</a>
                                </div>
                            </div><!-- col-sm-12 -->

                        </div><!--End row-->

                    </form>
                </div>
            </div>
            <!--// End Payment details-->
            <div class="col-lg-12 col-sm-12">
                <div class="routemap">
                    <div class="popin">
                        <img src="img/map.jpg" alt="map"/>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>





